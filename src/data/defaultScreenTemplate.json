{
  "components": [
    {
      "id": "screen",
      "type": "screen",
      "parentId": null,
      "children": ["topBar", "body", "bottomBar"],
      "props": {},
      "position": { "x": 0, "y": 0 },
      "style": {
        "display": "flex",
        "flexDirection": "column",
        "minHeight": "720px",
        "backgroundColor": "#f8fafc",
        "padding": "0",
        "gap": "0px"
      },
      "events": {}
    },
    {
      "id": "topBar",
      "type": "column",
      "parentId": "screen",
      "children": ["headerTitle", "headerSubtitle"],
