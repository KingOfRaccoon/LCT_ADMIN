      "position": { "x": 0, "y": 0 },
      "style": {
        "borderRadius": "20px",
        "border": "1px solid rgba(148, 163, 184, 0.16)",
        "boxShadow": "0 18px 40px rgba(15, 23, 42, 0.08)"
      },
      "events": {}
    },
    {
      "id": "cardRow",
      "type": "row",
      "parentId": "cardContainer",
      "children": ["thumbnail", "detailsColumn"],
      "props": {
        "spacing": 20,
        "padding": 0,
        "alignItems": "stretch",
        "justifyContent": "flex-start",
        "background": "transparent"
      },
      "position": { "x": 0, "y": 0 },
      "style": {
        "width": "100%"
      },
      "events": {}
    },
    {
      "id": "thumbnail",
      "type": "image",
      "parentId": "cardRow",
      "children": [],
      "props": {
        "src": {
          "value": "https://via.placeholder.com/320x200?text=Game",
          "reference": "${game.thumbnail}"
        },
        "alt": {
          "value": "Миниатюра игры",
          "reference": "${game.title}"
        }
      },
      "position": { "x": 0, "y": 0 },
      "style": {
        "width": "200px",
        "height": "140px",
        "objectFit": "cover",
        "borderRadius": "16px"
      },
      "events": {}
    },
